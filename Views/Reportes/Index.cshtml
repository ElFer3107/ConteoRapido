@*@model IEnumerable<CoreCRUDwithORACLE.ViewModels.Reportes.AOperadoresProvincia>*@
@model CoreCRUDwithORACLE.Comunes.PaginatedListAsync<CoreCRUDwithORACLE.ViewModels.Reportes.AOperadoresProvincia>
@*@model UsuarioViewModel*@

@{
    ViewData["Title"] = "OperadoresProvincia";
}

<h1>Operadores por Provincia</h1>


<div id="wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <table>
                        <tr>

                            <th> <a asp-controller="Home" asp-action="Index" class="btn btn-block btn-secondary">  Ir al Inicio </a></th>
                            <th> <a asp-controller="Account" asp-action="Logout" class="btn btn-block btn-danger">Salir</a></th>
                        </tr>
                    </table>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    @if (Model != null)
                    {
                        <div class="card">
                            <div class="card-header">
                                <!--
     <form asp-action="Index" method="get">
         <div class="form-actions no-color">
             <p>
                 Ingrese Texto: <input type="text" name="textoBuscar" value="@ViewData["CurrentFilter"]" />
                 <input type="submit" value="Buscar" class="btn btn-default btn-light" /> |
                 <a asp-action="Index">Listado Completo</a>
             </p>
         </div>
     </form>

    -->
                                <div asp-validation-summary="All" class="text-danger"></div>

                            </div>
                            @{
                                var juntas = 0;
                                var operadores = 0;
                            }
                            <div class="card-body">
                                <div class="form-group">
                                    <table id="RepProvOper" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @*@Html.DisplayNameFor(model => model.COD_PROV)*@
                                                    CODIGO DE PROVINCIA
                                                </th>
                                                <th>
                                                    <a asp-action="Index" asp-route-sortOrder="@ViewData["ProvSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">PROVINCIA</a>
                                                </th>
                                                @*<th>
                        @Html.DisplayNameFor(model => model.PROVINCIA)
                    </th>*@
                                                <th>
                                                    @*@Html.DisplayNameFor(model => model.JUNTAS)*@
                                                    JUNTAS
                                                </th>
                                                <th>
                                                    @*@Html.DisplayNameFor(model => model.OPERADORES)*@
                                                    OPERADORES
                                                </th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.COD_PROV)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PROVINCIA)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.JUNTAS)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.OPERADORES)
                                                    </td>
                                                    <td>
                                                        @Html.ActionLink("Canton", "OperadoresCanton", new { codProvincia = item.SEGUROP }, new { @class = "btn btn-block btn-info" })
                                                    </td>
                                                </tr>
                                                juntas = juntas + item.JUNTAS;
                                                operadores = operadores + item.OPERADORES;
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th> TOTAL </th>
                                                <th></th>
                                                <th>@juntas</th>
                                                <th>@operadores</th>
                                                <th></th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                    @{
                                        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                                        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                                    }

                                    <!--
    <a asp-action="Index"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-default @prevDisabled">
        Anterior
    </a>
    <a asp-action="Index"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn btn-default @nextDisabled">
        Siguiente
    </a>
        -->
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>
