                        @Html.DisplayFor(modelItem => item.Nom_Zona)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.junta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.sexo)
