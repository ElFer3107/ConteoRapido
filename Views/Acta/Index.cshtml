            {
                <tr>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.COD_USUARIO)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.USUARIO)
                    </td>
                    <td>
